    <input type="button" id="addToken1" onclick="addProduct(1)" value="Добавить Кофе 1">
    <input type="button" onclick="delProduct(1)" id="delToken1" value="Убрать Кофе 1">
    <br>
    <input type="button" id="addToken2" onclick="addProduct(2)" value="Добавить Кофе 2">
    <input type="button" type="button" onclick="delProduct(2)" id="delToken2" value="Убрать Кофе 2">
