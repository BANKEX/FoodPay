<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Dashboard BANKEX</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="./bootstrap/boostrap.min.css">
    <link rel="stylesheet" href="./styles/scan.css">
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <a class="navbar-brand" href="#">BANKEX</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01"
            aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarColor01">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" href="./dashboard">Main info
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="./scan">Scan QR</a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" href="./admin">Admin
                        <span class="sr-only">(current)</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="./cashbox">Cashbox</a>
                </li>
            </ul>
        </div>
    </nav>

    <div id="top" class="container-fluid">

        <body>
            <h2>Create token: </h2>
            <form>
                <input id="createTokenID" placeholder="Token ID">
                <input id="createTokenOwnerPrvtKey" placeholder="Contract owner prvt key">
                <input id="createTokenTokenOwner" placeholder="Future token owner addr.">
                <input id="createTokenTotalSupply" placeholder="Total supply">
                <input type="button" onclick="createToken()" value="Send">
            </form>

            <h2>Create random address</h2>
            <form>
                <span id="randomAddress">Random address</span>
                <input type="button" onclick="createRandomAddress()" value="Generate">
            </form>

            <h2>Encrypt and decrypt address</h2>
            <form>
                <input id="cryptoPassword" placeholder="Password">
                <br>
                <br>
                <input id="encryptAddress" placeholder="Address">
                <input type="button" onclick="encryptPassedAddress()" value="Encrypt">
                <span> Encrypted address: </span>
                <span id="encryptedAddress"></span>
                <br>
                <img id="qrcode">
                <br>
                <br>
                <input id="decryptAddress" placeholder="Encrypted address">
                <input type="button" onclick="decryptEncryptedAddress()" value="Decrypt">
                <span> Decrypted address: </span>
                <span id="decryptedAddress"></span>
            </form>

            <h2>Approve: </h2>
            <form>
                <input id="approveTokenID" placeholder="Token ID">
                <input id="approveSenderPrvtKey" placeholder="Sender private key">
                <input id="approveSpenderAddress" placeholder="Spender address">
                <input id="approveValue" placeholder="Approve value">
                <input type="button" onclick="approveCustomer()" value="Send">
            </form>

            <h2>Increase Approval: </h2>
            <form>
                <input id="increaseApprovalTokenID" placeholder="Token ID">
                <input id="increaseApprovalSenderPrvtKey" placeholder="Sender private key">
                <input id="increaseApprovalSpenderAddress" placeholder="Spender address">
                <input id="increaseApprovalValue" placeholder="Added value">
                <input type="button" onclick="increaseCustomerApproval()" value="Send">
            </form>

            <h2>Decrease Approval: </h2>
            <form>
                <input id="decreaseApprovalTokenID" placeholder="Token ID">
                <input id="decreaseApprovalSenderPrvtKey" placeholder="Sender private key">
                <input id="decreaseApprovalSpenderAddress" placeholder="Spender address">
                <input id="decreaseApprovalValue" placeholder="Subtracted value">
                <input type="button" onclick="decreaseCustomerApproval()" value="Send">
            </form>

            <h2>Allowance: </h2>
            <form>
                <input id="allowanceTokenID" placeholder="Token ID">
                <input id="allowanceOwnersAddress" placeholder="Owner's funds address">
                <input id="allowanceSpenderAddress" placeholder="Spender address">
                <input id="allowanceCount" disabled="disabled" placeholder="Approve value">
                <input type="button" onclick="customerAllowance()" value="View">
            </form>

            <h2>Total Supply: </h2>
            <form>
                <input id="totalSupplyTokenID" placeholder="Token ID">
                <input type="button" onclick="checkTotalSupply()" value="View">
                <span> Token supply: </span>
                <span id="totalSupply"></span>
            </form>

            <h2>Check token balance: </h2>
            <form>
                <input id="balanceOfTokenID" placeholder="Token ID">
                <input id="balanceOfAddress" placeholder="Address">
                <input type="button" onclick="checkBalanceOf()" value="View">
                <span> Balance: </span>
                <span id="balance"></span>
            </form>

            <h2>Transfer: </h2>
            <form>
                <input id="transferTokenID" placeholder="Token ID">
                <input id="transferPrvtKey" placeholder="Private key from">
                <input id="transferAddressTo" placeholder="Address to">
                <input id="transferValue" placeholder="value">
                <input type="button" onclick="transferToken()" value="Send">
            </form>

            <h2>Transfer from: </h2>
            <form>
                <input id="transferFromTokenID" placeholder="Token ID">
                <input id="transferFromPrvtKey" placeholder="Sender private key">
                <input id="transferFromAddressFrom" placeholder="Address from">
                <input id="transferFromAddressTo" placeholder="Address to">
                <input id="transferFromValue" placeholder="value">
                <input type="button" onclick="transferTokenFrom()" value="Send">
            </form>
        </body>

    </div>


    <!-- jQuery first, then Tether, then Bootstrap JS. -->
    <script src="./bootstrap/jquery-3.1.1.slim.min.js"></script>
    <script src="./bootstrap/tether.min.js"></script>
    <script src="./bootstrap/bootstrap.min.js"></script>
    <script src="./utils/web3.min.js" type="text/javascript"></script>
    <script src="./utils/keythereum.min.js" type="text/javascript"></script>
    <script src="./utils/crypto-js/crypto-js.js" type="text/javascript"></script>
    <script src="./utils/config.js" type="text/javascript"></script>
    <script src="./utils/initialiseWeb3.js" type="text/javascript"></script>
    <script src="./utils/instascan.min.js" type="text/javascript"></script>
    <script src="./utils/llqrcode.js" type="text/javascript"></script>
    <script src="./utils/qrious.js" type="text/javascript"></script>
    <script src="./utils/qrScanner.js" type="text/javascript"></script>
    <script src="./utils/account.js" type="text/javascript"></script>
    <script src="./utils/ethereum.js" type="text/javascript"></script>
    <script src="./utils/ethereumjs-tx.js"></script>
    <script src="./utils/aes.js" type="text/javascript"></script>
    <script src="./utils/contractData.js" type="text/javascript"></script>
    <script src="./utils/multiToken.js" type="text/javascript"></script>
    <script src="./js/dashboard.js" type="text/javascript"></script>
</body>

</html>